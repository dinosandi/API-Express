generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  price       Int
}
enum Role {
  admin 
  user 
}
model User {
  id       String   @id @default(cuid())
  noHp     String
  username String   
  email    String   @unique
  password String

  role     Role     @default(user)
}

